<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" styleClass="login-container" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hospital.controllers.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Hospital Management System" textFill="#0f766e">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
    </Label>
    
    <VBox maxWidth="300" spacing="10">
        <Label text="Email" />
        <TextField fx:id="emailField" promptText="admin@hospital.com" />
        
        <Label text="Password" />
        <PasswordField fx:id="passwordField" />
        
        <Button defaultButton="true" maxWidth="Infinity" onAction="#handleLogin" styleClass="primary-button" text="Sign in" />
        
        <Label fx:id="errorLabel" textFill="RED" visible="false" />
    </VBox>
</VBox>
